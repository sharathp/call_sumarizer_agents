# AI Call Center Assistant Environment Variables
# Copy this file to .env and add your API keys

# OpenAI API Key (required for transcription via Whisper, summarization, and quality scoring)
OPENAI_API_KEY=your_openai_api_key_here

# LangSmith Configuration (optional - for debugging traces)
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=your_langsmith_api_key_here
LANGCHAIN_PROJECT=call-center-assistant

# Optional Configuration
LOG_LEVEL=INFO
STREAMLIT_SERVER_PORT=8501